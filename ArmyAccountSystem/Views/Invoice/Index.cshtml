@model IEnumerable<ArmyAccountSystem.Models.InvoiceDetail>
@{
    ViewBag.Title = "Index";
}

<h2 class="text-dark">Invoices Details</h2>

<hr />

<a href="@Url.Action("CreateInvoice")" class="btn btn-outline-primary">Add New Invoice</a>
<br>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Item Name</th>
            <th>Item Count</th>
            <th>Item Price</th>
            <th>Customer Name</th>
            <th>Invoice Date</th>
            <th>Total Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName</td>
                <td>@item.ItemCount</td>
                <td>@item.ItemPrice</td>
                <td>@item.InvoiceHeader.CustomerName</td>
                <td>@item.InvoiceHeader.Invoicedate</td>
                <td>@(item.ItemCount*item.ItemPrice)</td>
                <td>
                    @Html.ActionLink("Edit Invoice", "EditInvoice", "Invoice", new { id = item.ID }, new { @class = "btn btn-primary" }) &nbsp; &nbsp; &nbsp;
                    @Html.ActionLink("Delete Invoice", "DeleteInvoice", "Invoice", new { id = item.ID }, new { @class = "btn btn-danger js-delete" })
                </td>
            </tr>

        }
    </tbody>
</table>
