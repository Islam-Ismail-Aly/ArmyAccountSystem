@model ArmyAccountSystem.Models.InvoiceDetail
@{
    ViewBag.Title = "DeleteInvoice";
}

<h2>Delete Invoice</h2>
<h4>Are you sure you want to delete this Invoice?</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Invoice Name")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp; &nbsp; &nbsp;
            @Html.ActionLink("Cancel", "Index", "Invoice", new { }, new { @class = "btn btn-default" })
        </div>
    }
</div>

